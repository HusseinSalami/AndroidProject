<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#364b4b4b">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:src="@drawable/background_photo"
        android:scaleType="fitXY"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-90dp"
        android:layout_marginRight="-30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="58dp"
        android:id="@+id/corps"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="  Roger Feghali"
            android:textSize="33dp"
            android:layout_marginTop="10dp"
            android:id="@+id/main_title"
            android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:shadowColor="@color/text_shadow_white"
            android:textColor="@color/text_shadow_white"
            android:shadowRadius="2"
            android:shadowDx="5"
            android:shadowDy="5"
            android:layout_below="@+id/button_id"
            android:gravity="center"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:background="@color/ripple_material_light"
            android:id="@+id/button_id"
            android:gravity="center"
            >


            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="News"
                android:gravity="center"
                android:id="@+id/news_button"
                android:background="@drawable/rounded_corner"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:clickable="true"
                />


            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Calendar"
                android:gravity="center"
                android:id="@+id/calendar_button"
                android:background="@drawable/rounded_corner"
                android:layout_below="@+id/news_button"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                />


            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Palmares"
                android:gravity="center"
                android:id="@+id/Palmares_button"
                android:background="@drawable/rounded_corner"
                android:layout_below="@+id/calendar_button"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                />


            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Results"
                android:gravity="center"
                android:id="@+id/results_button"
                android:background="@drawable/rounded_corner"
                android:layout_below="@+id/Palmares_button"
                android:layout_marginStart="-25dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                />


            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="About"
                android:gravity="center"
                android:id="@+id/about_button"
                android:background="@drawable/rounded_corner"
                android:layout_below="@+id/results_button"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="15dp"
                android:clickable="true"

                />


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_material_dark"
        android:layout_alignParentBottom="true"
        android:id="@+id/social"
        android:layout_above="@+id/corps"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facebook_icon"
            android:src="@drawable/ic_new_facebook"
            android:layout_marginTop="3dp"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insta_icon"
            android:src="@drawable/ic_instagram"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/facebook_icon"/>

    </RelativeLayout>
</RelativeLayout>


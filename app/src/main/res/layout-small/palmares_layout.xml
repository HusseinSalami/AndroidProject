<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    >

    <HorizontalScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/palmares_scroll"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/social">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="#4d000000">

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:id="@+id/year_palmares_header"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:text="Year"
                    android:textSize="8dp"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:id="@+id/Event_text_palmares_header"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:text="Event"
                    android:textSize="8dp"
                    />

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="30dp"
                    android:id="@+id/championship_palmares_header"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="Championship"
                    android:textSize="8dp"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:id="@+id/Co_driver_text_header"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:text="Co_Driver"
                    android:textSize="8dp"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:id="@+id/Car_text_header"
                    android:gravity="center"
                    android:layout_marginLeft="17dp"
                    android:text="Car"
                    android:textSize="8dp"
                    />

                <TextView
                    android:layout_width="47dp"
                    android:layout_height="30dp"
                    android:id="@+id/Comment_text_header"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:text="Comment"
                    android:textSize="8dp"/>

            </LinearLayout>

            <ListView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_palmares"
                >

            </ListView>
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_material_dark"
        android:layout_alignParentBottom="true"
        android:id="@+id/social"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/facebook_icon"
            android:src="@drawable/ic_new_facebook"
            android:layout_marginTop="3dp"
            android:layout_alignParentLeft="true"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/insta_icon"
            android:src="@drawable/ic_instagram"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/facebook_icon"/>

    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:id="@+id/img_Event"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_vertical"

        />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:id="@+id/layout_items_Events"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:id="@+id/layout_Events_Model"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.27"
                android:id="@+id/lbl_Event_Title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Events_Title"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_Events_Date_hour"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/layout_Events_Model"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_Events_Date_hour"
                android:layout_weight="1.27"
                android:text="Events_Date_hours"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="12dp"

                />



        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:id="@+id/img_location_Events"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@null"
        android:gravity="center_vertical"

        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >

    <ImageView
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:id="@+id/img_News"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@null"
        android:gravity="center_vertical" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/layout_item_News">

        <LinearLayout
            android:id="@+id/layout_News_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.27"
                android:id="@+id/lbl_News_Title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:text="@string/News_title"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="12dp"
                />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/layout_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/layout_News_model"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/lbl_News_description"
                android:layout_height="wrap_content"
                android:layout_weight="1.27"
                android:layout_width="0dp"
                android:text="@string/News_Description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="12dp"

                />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:id="@+id/img_fleche"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@null"
        android:gravity="center_vertical" />

</LinearLayout>
